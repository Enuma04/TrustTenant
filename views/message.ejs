<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    
    <link rel="stylesheet" href="styles/main.css">
</head>
<body class="message-pg">
    <div><%- include("partials/header.ejs"); %></div>
    <div class="message-cont">
        <div><h1><%=name%></h1></div>
        <hr>
        <div id="chat-messages">
            <% messages.forEach(message => { %>
                <% if (message.sender_id === senderId) { %>
                    <div class="sender-messages">
                        <p><%= message.content %></p>
                    </div>
                <% } else { %>
                    <div class="receiver-messages">
                        <p> <%= message.content %></p>
                    </div>
                <% } %>
            <% }) %>
        </div>
        
        
        <input type="hidden" id="sender-id" value=<%=senderId%>>
        <input type="hidden" id="receiver-id" value=<%=receiverId%>>
        <textarea type="text" id="message" placeholder="Enter a message"></textarea>
        <button type="submit" id="send-message">Send</button>
        
    </div>
  <script src="/socket.io/socket.io.js"></script>
  <script src="js/script.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  
</body>


</html>